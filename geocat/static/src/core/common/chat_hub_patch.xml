<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="mail.ChatHub" t-inherit-mode="extension">
        <!-- Hide chat bubbles (but still allow windows) -->
        <xpath expr="//*[hasclass('o-mail-ChatHub-bubbles')]" position="attributes">
            <attribute name="style">visibility: collapse !important;</attribute>
        </xpath>
    </t>
</templates>