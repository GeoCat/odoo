<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="mail.ChatHub" t-inherit-mode="extension">
        <!-- Hide the chat hub completely: we use Mattermost! -->
        <xpath expr="//*[hasclass('o-mail-ChatHub')]" position="attributes">
            <attribute name="style">visibility: hidden !important;</attribute>
        </xpath>
    </t>
</templates>