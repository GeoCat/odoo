<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_licensing" model="ir.ui.view">
        <field name="name">product.template.form.view.licensing</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <page name="invoicing" position="after">
                <page string="Licensing" name="licensing">
                    <group name="properties">
                        <group string="GeoCat Bridge Licensing">
                            <field name="can_have_bridge_licenses"/>
                            <field name="bridge_plan_name"/>
                            <field name="bridge_seats"/>
                        </group>
                        <group/>
                    </group>
                </page>
            </page>
        </field>
    </record>
</odoo>
