<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_users_form_mail" model="ir.ui.view">
            <field name="name">res.users.form.mail</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <data>
                    <field name="signature" position="attributes">
                        <!-- Disable code view for signatures and some other things, so that users cannot mess things up too much -->
                        <attribute name="options">{'codeview': false, 'disableImage': true, 'disableVideo': true, 'disableFile': true, 'cssReadonly': true}</attribute>
                    </field>
                </data>
            </field>
        </record>
    </data>
</odoo>